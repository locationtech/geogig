<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.locationtech.geogig</groupId>
  <artifactId>geogig</artifactId>
  <version>2.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>GeoGig Root</name>
  <description>Parent pom providing dependency and plugin management for all geogig modules</description>

  <properties>
    <project.relativePath></project.relativePath><!-- define this on each project -->
    <test.maxHeapSize>512M</test.maxHeapSize>
    <maven.build.timestamp.format>dd-MMM-yyyy HH:mm</maven.build.timestamp.format>
    <build.timestamp>${maven.build.timestamp}</build.timestamp>
    <online.skip.pattern>**/*OnlineTest.java</online.skip.pattern>
    <postgresOnline.skip.pattern>org/locationtech/geogig/storage/postgresql/**</postgresOnline.skip.pattern>
    <postgresWebFunctional.skip.pattern>org/geogig/web/postgresql/functional/**</postgresWebFunctional.skip.pattern>
    <allow.test.skip>true</allow.test.skip>
    <argLine>-Xms256m -Xmx512m</argLine>
    <!-- or fmt.action 'validate' -->
    <fmt.action>format</fmt.action>
    <fmt.skip>false</fmt.skip>
    <skip.it>${skipTests}</skip.it>
    <!-- git-commit-id-plugin slows down the build, skip by default, except in api which sets this property to false -->
    <git.commitid.skip>true</git.commitid.skip>

    <delombok.outputDirectoryBase>${root.directory}/../src-delombok</delombok.outputDirectoryBase>
    <delombok-targetdir>${delombok.outputDirectoryBase}</delombok-targetdir>
    <lombok.version>1.18.8</lombok.version>
    <flatbuffers-java.version>1.9.0</flatbuffers-java.version>
    <lz4.version>1.3.0</lz4.version>
    <caffeine-version>2.7.0</caffeine-version>
    <compress-lzf.version>1.0.3</compress-lzf.version>
    <cucumber-java.version>1.2.4</cucumber-java.version>
    <gson.version>2.4</gson.version>
    <gt.version>22.1</gt.version>
    <guava.version>27.1-jre</guava.version>
    <jcommander.version>1.48</jcommander.version>
    <picocli.version>4.0.0-beta-2</picocli.version>
    <jsonp.version>1.0.4</jsonp.version>
    <jdt-annotation.version>1.1.0</jdt-annotation.version>
    <jts.version>1.16.1</jts.version>
    <junit.version>4.12</junit.version>
    <xmlunit.version>2.1.0</xmlunit.version>
    <logback.version>1.1.2</logback.version>
    <mockito.version>2.27.0</mockito.version>
    <slf4j.version>1.7.5</slf4j.version>
    <hikaricp.version>3.3.1</hikaricp.version>
    <rocksdb.version>6.0.1</rocksdb.version>
    <postgresql.version>42.2.5</postgresql.version>
    <springweb.version>4.3.7.RELEASE</springweb.version>
    <servlet-api.version>3.1.0</servlet-api.version>
    <jetty.version>9.4.1.v20170120</jetty.version>
    <appassembler.plugin.version>2.1.0</appassembler.plugin.version>
    <dependency.plugin.version>3.1.1</dependency.plugin.version>
    <surefire.plugin.version>3.0.0-M3</surefire.plugin.version>
    <assembly.plugin.version>3.1.1</assembly.plugin.version>
    <maven-jar-plugin-version>3.1.2</maven-jar-plugin-version>
    <git-commit-id-plugin-version>3.0.0</git-commit-id-plugin-version>
    <maven-compiler-plugin-version>3.8.1</maven-compiler-plugin-version>
    <maven-resources-plugin-version>3.1.0</maven-resources-plugin-version>
    <maven-source-plugin-version>3.1.0</maven-source-plugin-version>
    <maven-surefire-report-plugin-version>3.0.0-M3</maven-surefire-report-plugin-version>
    <maven-javadoc-plugin-vesion>3.1.0</maven-javadoc-plugin-vesion>
    <formatter-maven-plugin.version>2.9.0</formatter-maven-plugin.version>
    <maven-failsafe-plugin.version>3.0.0-M3</maven-failsafe-plugin.version>
  </properties>


  <scm>
    <connection>scm:git:git@github.com:locationtech/geogig.git</connection>
    <developerConnection>scm:git:[fetch=]git://github.com/locationtech/geogig.git[push=]git@github.com:locationtech/geogig.git</developerConnection>
    <url>https://github.com/locationtech/geogigeogig</url>
  </scm>

  <organization>
    <name>Boundless</name>
    <url>http://boundlessgeo.com</url>
  </organization>
  <inceptionYear>2011</inceptionYear>

  <licenses>
    <license>
      <name>Eclipse Distribution License</name>
      <url>https://www.eclipse.org/org/documents/edl-v10.html</url>
      <distribution>repo</distribution>
      <comments>The Eclipse Distribution License (a BSD-3 style license)</comments>
    </license>
  </licenses>
  <repositories>
    <repository>
      <id>boundless</id>
      <name>Boundless Maven Repository</name>
      <url>https://repo.boundlessgeo.com/main/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>osgeo</id>
      <name>Open Source Geospatial Foundation Repository</name>
      <url>http://download.osgeo.org/webdav/geotools/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
